@model ShoppingListApp.Infrastructure.Models.ShoppingItemRepository

@{
    ViewData["Title"] = "List";
}


<div class="container">
    <div style="margin-bottom:15px">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Nieuw item toevoegen..." />
            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">+</button>
            </span>
        </div>
    </div>

</div>
<div class="container">
    <table class="table" style="margin:0px">
        @foreach (var item in Model.ShoppingItems)
        {
        <tr>
            <td>@item.Name</td>
            <td align="right"><button class="btn-default btn-xs btn">-</button></td>
        </tr>
        }
    </table>

</div>

